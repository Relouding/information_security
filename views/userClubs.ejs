<!DOCTYPE html>
<html>

<head>
  <title> University Clubs </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
  <%- include('./partials/navbar.ejs', {user: user}) %>
    <div class="container-fluid mt-5">
      <h2 class="p-3 text-center"><%=user.username%>'s Clubs</h2>
      <div class="list-group">
        <div class="row px-3 py-1 w-120">
          <span class="col py-2 bg-noroff"><h2>Club ID</h2></span>
          <span class="col py-2 bg-noroff"><h2>Club Name</h2></span>
          <span class="col py-2 bg-noroff"><h2>Club Created Date</h2></span>
        </div>
        <% clubs.forEach(function(club) { %>
          <div class="row px-3 py-1 w-120">
            <span class="col py-1 bg-light">
              <%=club.id%>
            </span>
            <span class="col py-1 bg-light">
              <%=club.Name%>
            </span>
            <span class="col py-1 bg-light">
              <%=club.ClubCreatedDate%>
            </span>
          </div>
          <% }); %>
            <hr>
      </div>
    </div>
</body>

</html>
